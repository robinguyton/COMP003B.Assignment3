@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model COMP003B.Assignment3.Models.EventRegistration

<!-- Create the form -->
<h2>Event Registration</h2>
<partial name="_EventNav" />
<form asp-action="Register" method="post">

    <div>
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="EmailAddress"></label>
        <input asp-for="EmailAddress" type="email"  class="form-control" />
        <span asp-validation-for="EmailAddress" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="EventCode"></label>
        <input asp-for="EventCode" class="form-control" />
        <span asp-validation-for="EventCode" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Tickets"></label>
        <input asp-for="Tickets" class="form-control" />
        <span asp-validation-for="Tickets" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="ReferralCode"></label>
        <input asp-for="ReferralCode" class="form-control" />
        <span asp-validation-for="ReferralCode" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>

</form>


